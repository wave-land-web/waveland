---
export interface Props {
  href: string
  text: string
  newWindow?: boolean
  ariaLabel?: string
  [key: string]: any
}

const { href, text, newWindow, ariaLabel, ...props } = Astro.props
---

<a
  class="site-link"
  href={href}
  target={newWindow ? '_blank' : '_self'}
  rel="noopener noreferrer"
  aria-label={ariaLabel}
  {...props}>{text}</a
>
