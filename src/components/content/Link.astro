---
export interface Props {
  href: string
  text: string
  newWindow?: boolean
  ariaLabel?: string
}

const { href, text, newWindow, ariaLabel } = Astro.props
---

<a
  class="site-link"
  href={href}
  target={newWindow ? '_blank' : '_self'}
  rel="noopener noreferrer"
  aria-label={ariaLabel}>{text}</a
>
