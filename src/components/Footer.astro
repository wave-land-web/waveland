---
import { Icon } from 'astro-icon/components'
import TitleLogo from './TitleLogo.astro'
---

<footer class="w-full py-16 border-t">
  <div id="wrapper" class="grid lg:grid-cols-2 gap-8 max-w-screen-2xl m-auto mb-8 px-4">
    <div id="newsletter">
      <h2 class="h2 mb-4 pt-5">Newsletter</h2>
      <form action="" method="post" class="flex gap-2 max-w-96">
        <input
          id="email"
          class="block w-full border rounded-md dark:border-white p-2 text-darkBlue dark:text-white bg-white dark:bg-darkBlue placeholder:text-grey"
          name="email"
          type="email"
          autocomplete="email"
          placeholder="name@email.com"
          required
        />
        <button class="border border-purple rounded-md p-2 text-purple">Subscribe</button>
      </form>
    </div>
    <div id="info">
      <TitleLogo class="max-w-96 lg:ml-auto" />
      <p class="site-text max-w-[530px] lg:ml-auto lg:text-end italic">
        Wave Land is a creative web design studio run by lifelong musician and artist, Josh
        Nussbaum. Currently building in Madison, WI.
      </p>
    </div>
  </div>
  <div
    id="extras"
    class="flex flex-col lg:flex-row gap-2 lg:justify-between max-w-screen-2xl m-auto px-4 text-grey"
  >
    <a href="mailto:hello@wavelandweb.com" class="flex gap-2 items-center"
      ><Icon name="tabler:mail" class="site-icon" />hello@wavelandweb.com
    </a>
    <p>Â© {new Date().getFullYear()} Wave Land Web LLC</p>
  </div>
</footer>
