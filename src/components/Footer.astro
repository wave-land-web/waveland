---
import { Icon } from 'astro-icon/components'
import TitleLogo from './TitleLogo.astro'
---

<footer class="w-full py-4 border-t-[1px] border-grey">
  <div id="wrapper" class="grid lg:grid-cols-2 gap-8 max-w-screen-2xl m-auto mb-8 px-4">
    <div id="newsletter">
      <h2 class="h2 mb-4 pt-5">Newsletter</h2>
      <form action="/api/subscribe" method="post" class="flex gap-2 max-w-96 mb-4">
        <label for="email" class="sr-only">Email Address</label>
        <input
          id="email"
          class="block w-full border rounded-md border-grey p-2 text-darkBlue dark:text-white bg-transparent placeholder:text-grey focus:outline-none focus:ring-2 focus:ring-purple shadow-sm transition"
          name="email"
          type="email"
          autocomplete="email"
          placeholder="Email Address"
          required
        />
        <button class="site-button hover:text-white dark:hover:text-darkBlue">Subscribe</button>
      </form>
    </div>
    <div id="info">
      <TitleLogo class="max-w-96 lg:ml-auto" />
      <p class="max-w-[530px] mb-4 lg:ml-auto lg:text-end italic">
        Wave Land is a creative web design studio run by lifelong musician and artist, Josh
        Nussbaum. Currently building in Madison, WI.
      </p>
    </div>
  </div>
  <div class="flex flex-col md:flex-row justify-between gap-2 max-w-screen-2xl m-auto px-4">
    <a href="mailto:hello@wavelandweb.com" class="inline-flex gap-2 items-center text-grey"
      ><Icon name="tabler:mail" class="site-icon" />hello@wavelandweb.com
    </a>
    <p class="text-grey lg:text-end">wavelandweb.com Â© {new Date().getFullYear()}</p>
  </div>
</footer>
