---
import type { SanityAsset } from '@sanity/image-url/lib/types/types'
import DateAndReadTime from '../text/DateAndReadTime.astro'
import Pill from '../text/Pill.astro'
import SanityImage from './SanityImage.astro'

export interface Props {
  title: string
  published: string
  minutesRead: number
  image: SanityAsset
  imageAlt: string
  services: string[]
}

const { title, published, minutesRead, image, imageAlt, services } = Astro.props
---

<header class="pt-[calc(4rem+var(--nav-height))] text-left lsa">
  <div class="container md:max-w-4xl mx-auto flex flex-col gap-4 md:gap-6 justify-center">
    <DateAndReadTime
      class="justify-start md:justify-center"
      published={published}
      minutesRead={minutesRead}
    />
    <h1 class="text-left md:text-center">{title}</h1>

    <div class="flex flex-wrap items-center justify-start md:justify-center gap-3 mb-4 md:mb-6">
      {
        services.map((service: string) => (
          <Pill
            text={`${service}`}
            size="small"
            class:list={[
              { 'bg-purple delay-200': service === 'Web Design & Development' },
              { 'bg-orange delay-300': service === 'Digital Strategy' },
              { 'bg-green delay-500': service === 'UX/UI' },
              ['lsa lsa-slide-left'],
            ]}
          />
        ))
      }
    </div>

    <SanityImage image={image} alt={imageAlt} class="h-[clamp(250px,50vw,500px)]" />
  </div>
</header>
