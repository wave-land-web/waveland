---
import CTA from '../text/CTA.astro'

export interface Props {
  title: string
  subtitle: string
  bodyText?: string
  linkText?: string
  linkUrl?: string
}

const { title, subtitle, bodyText, linkText, linkUrl } = Astro.props
---

<header
  class="max-w-2xl flex flex-col justify-center items-center gap-4 pt-[calc(4rem+var(--nav-height))] mb-24 text-center lsa no-repeat"
>
  <h1 class="text-purple text-base md:text-lg leading-none">{title}</h1>
  <p class="font-header text-5xl md:text-6xl leading-tight lg:leading-tight">{subtitle}</p>
  {bodyText && <p class="max-w-xl mb-4 text-lightGrey">{bodyText}</p>}
  {linkText && linkUrl && <CTA text={linkText} url={linkUrl} arrowLeft={true} />}
</header>
