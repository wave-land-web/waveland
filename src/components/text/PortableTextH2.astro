---
const { node } = Astro.props // `.node` is the current node in the PortableText

// Check if the node is of type 'h2' and has children
if (!node.children[0].children) {
  return null
}

const headerText = node.children[0].children[0].text
const headerId = headerText.replace(/\s+/g, '-').toLowerCase()
---

<h2 id={headerId}>{headerText}</h2>
