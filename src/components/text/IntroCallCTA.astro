---
import { Icon } from 'astro-icon/components'
import Link from './Link.tsx'

export interface Props {
  title: string
  description?: string
  linkText: string
  linkSrc: string
}

const { title, description, linkText, linkSrc } = Astro.props
---

<div class="grid gap-2 md:gap-16 md:grid-cols-2 mb-40 lsa lsa-slide-up">
  <div>
    <h2 class="h2 md:mb-4">{title}</h2>

    <!-- Desktop Email -->
    <a
      href="mailto:hello@wavelandweb.com?subject=Website Inquiry from wavelandweb.com"
      aria-label="Email"
      title="Email"
      class="hidden md:inline-flex gap-2 items-center text-grey hover:text-purple"
      ><Icon name="tabler:mail" />hello@wavelandweb.com
    </a>
  </div>
  <div>
    <Link
      text={linkText}
      url={linkSrc}
      linkClass="font-header mb-2 md:mb-4 text-3xl md:text-4xl lg:text-5xl"
      iconClass="w-8 md:w-10 lg:w-12"
    />
    <p class="text-lightGrey">{description}</p>
  </div>

  <!-- Mobile Email -->
  <a
    href="mailto:hello@wavelandweb.com?subject=Website Inquiry from wavelandweb.com"
    aria-label="Email"
    title="Email"
    class="inline-flex md:hidden gap-2 items-center mt-2 text-grey hover:text-purple"
    ><Icon name="tabler:mail" />hello@wavelandweb.com
  </a>
</div>
