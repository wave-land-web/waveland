---
import { Icon } from 'astro-icon/components'
import { Picture } from 'astro:assets'
import Card from '../ui/Card.astro'

export interface Props {
  title: string
  text: string
  caseStudyUrl: string
  externalUrl: string
  linkText: string
  image: ImageMetadata
  imageAlt: string
  variant?: 1 | 2 | 3
  isReversed?: boolean
  class?: string
}

const {
  title,
  text,
  caseStudyUrl,
  externalUrl,
  linkText,
  image,
  imageAlt,
  variant,
  class: className,
  isReversed,
} = Astro.props

// Determine which icon to use
let icon = ''
switch (variant) {
  case 1:
    icon = 'wave-1'
    break
  case 2:
    icon = 'wave-2'
    break
  case 3:
    icon = 'wave-3'
    break
  default:
    icon = 'wave-1'
    break
}

// Determine theme styles
const themeStyles = {
  text: {
    'text-purple': variant === 1,
    'text-orange': variant === 2,
    'text-green': variant === 3,
  },
  bg: {
    'h-96 bg-purple': variant === 1,
    'h-96 bg-orange': variant === 2,
    'h-96 bg-green': variant === 3,
  },
}
---

<div
  class:list={[
    'grid gap-8 lg:gap-16 xl:gap-32 items-center lg:grid-cols-2 lsa lsa-slide-up no-repeat',
    className,
  ]}
>
  <div
    class:list={[
      'font-header',
      {
        'lg:order-2': isReversed,
      },
    ]}
  >
    <h2 class:list={['inline', themeStyles.text]}>{title}</h2>
    <p class="inline h2">
      {text}
    </p>
  </div>
  <Card class={themeStyles.bg}>
    <Picture
      src={image}
      formats={['avif', 'webp', 'jpg']}
      alt={imageAlt}
      quality="low"
      widths={[240, 540, 720, image.width]}
      sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${image.width}px`}
      class="absolute-center w-full max-w-36 z-10 drop-shadow-lg"
    />
    <Icon name={icon} class="absolute-center h-4/5" />

    <div
      class="absolute bottom-0 w-full h-full md:h-auto flex flex-col md:flex-row justify-between p-4"
    >
      <a href={caseStudyUrl} class:list={['w-fit text-base text-black hover:text-darkGrey']}
        >Case Study</a
      >
      <a
        href={externalUrl}
        target="_blank"
        rel="noopener noreferrer"
        class:list={['w-fit bottom-4 text-base text-black hover:text-darkGrey']}
        ><Icon name="tabler:link" class="inline mr-2 site-icon" />{linkText}</a
      >
    </div>
  </Card>
</div>
