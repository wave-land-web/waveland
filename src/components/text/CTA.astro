---
import { Icon } from 'astro-icon/components'

export interface Props {
  text: string
  url: string
  arrowLeft?: boolean
  newWindow?: boolean
  linkClass?: string
  iconClass?: string
}

const { text, url, arrowLeft, newWindow, linkClass, iconClass } = Astro.props
---

<a
  href={url}
  target={newWindow ? '_blank' : '_self'}
  rel={newWindow ? 'noopener noreferrer' : ''}
  class={`${linkClass} flex gap-2 items-center site-link-2 group`}
  aria-label={text}
>
  {
    arrowLeft ? (
      <>
        <Icon
          name="tabler:arrow-narrow-left"
          class={`${iconClass} site-icon group-hover:-translate-x-1 transition-transform duration-200 ease-in-out`}
        />
        {text}
      </>
    ) : (
      <>
        {text}
        <Icon
          name="tabler:arrow-narrow-right"
          class={`${iconClass} site-icon group-hover:translate-x-1 transition-transform duration-200 ease-in-out`}
        />
      </>
    )
  }
</a>
