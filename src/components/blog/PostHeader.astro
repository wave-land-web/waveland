---
import { Picture } from 'astro:assets'

const { frontmatter, image } = Astro.props
const { title, published, imageAlt } = frontmatter
---

<header
  class="flex flex-col gap-4 w-full max-w-4xl justify-center pt-[calc(4rem+var(--nav-height))] pb-4 px-0 text-center border-b-[1px] border-grey"
>
  <p
    class="flex gap-2 items-center justify-center md:justify-center font-body text-purple text-base md:text-lg"
  >
    <span>
      {
        new Date(published).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }
    </span>
    <span class="text-purple">â€¢</span>
    <!-- <span>{minutesRead}</span> -->
  </p>
  <h1>{title}</h1>
  <Picture
    src={image}
    class="block h-[clamp(250px,50vw,500px)] object-cover shadow-sm rounded-lg"
    formats={['avif', 'webp']}
    alt={imageAlt}
    loading="eager"
  />
</header>
