---
import { Picture } from 'astro:assets'

const { frontmatter, image } = Astro.props
const { title, published, minutesRead, imageAlt } = frontmatter
---

<header
  class="flex flex-col gap-4 w-full max-w-4xl justify-center pt-[calc(4rem+var(--nav-height))] pb-4 px-0 md:text-center border-b-[1px] border-grey"
>
  <div class="flex gap-2 items-center justify-start md:justify-center">
    <p class="font-body text-purple text-base md:text-lg">
      {
        new Date(published).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }
    </p>
    <span class="text-purple">â€¢</span>
    <p class="font-body text-purple text-base md:text-lg">{minutesRead}</p>
  </div>
  <h1>{title}</h1>
  <Picture
    src={image}
    class="block h-[clamp(250px,50vw,500px)] object-cover shadow-sm rounded-lg"
    formats={['avif', 'webp']}
    alt={imageAlt}
    loading="eager"
  />
</header>
