---
import powerPassengerPassageImage from '../assets/power-passenger-passage.png'
import robbyWebbImage from '../assets/robby-webb.png'
import supervoidImage from '../assets/supervoid.png'
import IntroCallCTA from '../components/text/IntroCallCTA.astro'
import Link from '../components/text/Link.tsx'
import Pill from '../components/text/Pill.astro'
import TextAndImage from '../components/text/TextAndImage.astro'
import TitleLogo from '../components/text/TitleLogo.astro'
import Card from '../components/ui/Card.astro'
import Testimonials from '../components/ui/Testimonials.astro'
import Layout from '../layouts/Layout.astro'
import { testimonials as testimonialData } from '../lib/data/testimonials'
---

<Layout title="Wave Land | Web Design, Strategy, and Resources for Creatives">
  <header
    class="h-[calc(100dvh-3rem)] max-h-[1200px] pt-[var(--nav-height)] flex flex-col justify-between gap-12"
  >
    <div>
      <div class="mb-6 lsa lsa-slide-left no-repeat">
        <TitleLogo />
      </div>

      <div class="flex flex-wrap gap-4">
        <Pill
          text="Web Design & Development"
          href="#services"
          class="bg-purple lsa delay-100 no-repeat"
        />
        <Pill text="Digital Strategy" href="#services" class="bg-orange lsa delay-200 no-repeat" />
        <Pill
          text="Education & Community Support"
          href="#services"
          class="bg-green lsa delay-300 no-repeat"
        />
      </div>
    </div>
    <div class="max-w-2xl">
      <p class="mb-6 lsa delay-500 no-repeat">
        Helping creatives grow online with custom web design, community resources, and a partnership
        you can trust.
      </p>

      <div class="lsa delay-700 no-repeat">
        <Link text="Discover Your Voice" url="/creative-archetype" />
      </div>
    </div>
  </header>

  <main>
    <section id="about">
      <TextAndImage
        title="Carve your path. "
        text="Your website should be a true extension of your creativityâ€”giving you more freedom to focus on what you love."
        caseStudyUrl="/case-studies/supervoid"
        externalUrl="https://supervoid.tv"
        linkText="supervoid.tv"
        image={supervoidImage}
        imageAlt="Supervoid website on a mobile device"
        variant={1}
        class="py-16 md:py-24"
      />
      <TextAndImage
        title="Fuel your creativity. "
        text="Spend more time making, sharing, and growing, without getting bogged down by technical hurdles."
        caseStudyUrl="/case-studies/power-passenger-passage"
        linkText="powerpassengerpassage.com"
        externalUrl="https://powerpassengerpassage.com"
        image={powerPassengerPassageImage}
        imageAlt="Power Passenger Passage website on a mobile device"
        variant={2}
        isReversed={true}
        class="py-16 md:py-24"
      />
      <TextAndImage
        title="Amplify your impact. "
        text="A thoughtful, user-first website that strengthens your brand, builds trust and inspires action."
        caseStudyUrl="/case-studies/robby-webb"
        externalUrl="https://robbywebb.com"
        linkText="robbywebb.com"
        image={robbyWebbImage}
        imageAlt="Robby Webb website on a mobile device"
        variant={3}
        class="py-16 md:py-24"
      />

      <div class="lsa lsa-slide-up no-repeat">
        <Link
          text="View Case Studies"
          url="/case-studies"
          linkClass="font-header text-4xl lg:text-5xl"
          iconClass="w-12"
        />
      </div>
    </section>

    <section id="services">
      <h2 class="mb-8 lsa no-repeat">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 md:grid-rows-2 gap-8 text-black">
        <Card
          class="p-8 md:row-span-2 flex flex-col justify-end gap-4 bg-purple lsa lsa-slide-up no-repeat"
        >
          <span>01</span>
          <h3>Web Design & Development</h3>
          <p class="text-base">
            Our custom websites blend striking design with intuitive functionality, creating
            accessible, user-first experiences that build trust and empower your audience.
          </p>
        </Card>

        <Card
          class="p-8 flex flex-col justify-end gap-4 bg-orange lsa lsa-slide-up delay-100 no-repeat"
        >
          <span>02</span>
          <h3>Digital Strategy</h3>
          <p class="text-base">
            We help you set clear, meaningful goals for your online presence, ensuring every step
            aligns with your vision, engages your community, and drives real impact.
          </p>
        </Card>

        <Card
          class="p-8 flex flex-col justify-end gap-4 bg-green lsa lsa-slide-up delay-200 no-repeat"
        >
          <span>03</span>
          <h3>Education & Community Support</h3>
          <p class="text-base">
            We share knowledge, tools, and guidance to help creatives build websites and products
            that inspire, connect, and serve their audiences seamlessly.
          </p>
        </Card>
      </div>
    </section>

    <section
      id="testimonials"
      class="max-w-screen-md m-auto text-center lsa lsa-slide-up no-repeat"
    >
      <h2 class="mb-8">Testimonials</h2>
      <Testimonials data={testimonialData} />
    </section>

    <section id="get-started">
      <IntroCallCTA
        title="Get Started"
        description="Let's explore how to bring your ideas to life. Schedule a free strategy session or send us an email. We're here to help."
        linkText="Free Strategy Call"
        linkSrc="https://calendly.com/wavelandweb/15-min-meeting"
      />
    </section>
  </main>
</Layout>
