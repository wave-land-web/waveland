---
import AppWindowIcon from '../assets/app-window.svg'
import ChartColumnIcon from '../assets/chart-column.svg'
import powerPassengerPassageImage from '../assets/power-passenger-passage.png'
import robbyWebbImage from '../assets/robby-webb.png'
import SunsetTwoIcon from '../assets/sunset-2.svg'
import supervoidImage from '../assets/supervoid.png'
import IntroCallCTA from '../components/text/IntroCallCTA.astro'
import Link from '../components/text/Link.tsx'
import Pill from '../components/text/Pill.astro'
import TextAndImage from '../components/text/TextAndImage.astro'
import TitleLogo from '../components/text/TitleLogo.astro'
import Testimonials from '../components/ui/Testimonials.astro'
import Layout from '../layouts/Layout.astro'
import { testimonials as testimonialData } from '../lib/data/testimonials'

const websiteDetails = [
  {
    summary: 'Ongoing Partnership',
    description:
      "Our relationship doesn't end once your site is live. We offer continuous digital strategy, mentorship, and partnership to help your business grow and adapt. All packages include 24/7 customer support via email and optional video calls.",
  },
  {
    summary: 'High Performance',
    description:
      'Expect fast load times and seamless performance across all devices, ensuring your visitors have a smooth and satisfying experience.',
  },
  {
    summary: 'Custom Design & Branding',
    description:
      'We create one-of-a-kind designs that capture the essence of your brand, making sure your website stands out in a crowded digital landscape.',
  },
  {
    summary: 'SEO Optimizations',
    description:
      'Benefit from on-site and technical SEO optimizations that make your website easier to find and rank higher in search engines.',
  },
  {
    summary: 'Sustainable & Accessible',
    description:
      'We design with sustainability in mind, focusing on accessibility and user experience to ensure your site is inclusive and user-friendly.',
  },
  {
    summary: 'User-Centric Approach',
    description:
      'We prioritize empathy for your users, leading to increased trust, stronger connections, and higher conversion rates.',
  },
]
---

<Layout title="Wave Land | Web Design, Strategy, and Resources for Creatives">
  <header
    class="h-[calc(100dvh-3rem)] max-h-[1200px] pt-[var(--nav-height)] flex flex-col justify-between gap-12"
  >
    <div>
      <div class="mb-6 lsa lsa-slide-left">
        <TitleLogo />
      </div>

      <div class="flex flex-wrap gap-4">
        <Pill text="Web Design & Development" href="#about-us" class="bg-purple lsa delay-100" />
        <Pill text="Digital Strategy" href="#about-us" class="bg-orange lsa delay-200" />
        <Pill text="Education & Partnership" href="#about-us" class="bg-green lsa delay-300" />
      </div>
    </div>
    <div class="max-w-2xl">
      <p class="mb-4 md:mb-6 lsa delay-500">
        Helping creatives stand out online with user-first design and strategic support.
      </p>
      <div class="lsa delay-700">
        <Link
          text="Contact Us"
          url="/contact"
          linkClass="font-header text-3xl md:text-4xl lg:text-5xl"
          iconClass="w-8 md:w-10 lg:w-12"
        />
      </div>
    </div>
  </header>

  <main>
    <section id="introduction">
      <TextAndImage
        title="Carve your path."
        text="Your website should be a true extension of your creativity—giving you more freedom to focus on what you love."
        caseStudyUrl="/case-studies/supervoid"
        linkText="supervoid.tv"
        image={supervoidImage}
        imageAlt="Supervoid website on a mobile device"
        color="purple"
        class="py-8 md:py-16 lg:py-24"
      />
      <TextAndImage
        title="Fuel your creativity."
        text="Spend more time making, sharing, and growing, without getting bogged down by technical hurdles."
        caseStudyUrl="/case-studies/power-passenger-passage"
        linkText="powerpassengerpassage.com"
        image={powerPassengerPassageImage}
        imageAlt="Power Passenger Passage website on a mobile device"
        isReversed={true}
        color="orange"
        class="py-8 md:py-16 lg:py-24"
      />
      <TextAndImage
        title="Amplify your impact."
        text="A thoughtful, user-first website that strengthens your brand, builds trust and inspires action."
        caseStudyUrl="/case-studies/robby-webb"
        linkText="robbywebb.com"
        image={robbyWebbImage}
        imageAlt="Robby Webb website on a mobile device"
        color="green"
        class="py-8 md:py-16 lg:py-24"
      />
      <div class="lsa lsa-slide-up">
        <Link
          text="View Case Studies"
          url="/case-studies"
          linkClass="font-header text-3xl md:text-4xl lg:text-5xl"
          iconClass="w-8 md:w-10 lg:w-12"
        />
      </div>
    </section>

    <section id="about-us">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-16">
        <div class="h-full">
          <div class="sticky top-[calc(var(--nav-height)+1rem)] flex flex-col gap-6">
            <h2>What We Do</h2>
            <ul class="grid grid-cols-1 gap-4 md:gap-8">
              <li class="lsa lsa-slide-up flex gap-4 items-center">
                <AppWindowIcon class="flex-shrink-0 w-8 md:w-10 h-auto stroke-2 text-purple" />
                <h3 class="h4 text-purple">Web Design & Development</h3>
              </li>
              <li class="lsa lsa-slide-up delay-100 flex gap-4 items-center">
                <ChartColumnIcon class="flex-shrink-0 w-8 md:w-10 h-auto stroke-2 text-orange" />
                <h3 class="h4 text-orange">Digital Strategy</h3>
              </li>
              <li class="lsa lsa-slide-up delay-200 flex gap-4 items-center">
                <SunsetTwoIcon class="flex-shrink-0 w-8 md:w-10 h-auto stroke-2 text-green" />
                <h3 class="h4 text-green">Education & Partnership</h3>
              </li>
            </ul>
          </div>
        </div>

        <div class="flex flex-col gap-6 text-container">
          <p class="h4 py-4 lsa lsa-slide-up">
            We do a lot of things, but it's all centered around making a kick-ass website.
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            Before we design and build your website, it's important to get as familiar as possible
            with your vision and the project needs.
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            We start with one or two focused strategy sessions to set you up for success and make
            sure our goals are well-defined.
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            Development can take anywhere from a week to 2-3 months, depending on a lot of factors —
            we go as fast as we need to, and no quicker.
          </p>
          <p class="h5 py-4 lsa lsa-slide-up">
            Our focus is on bringing your vision to life, not crushing deadlines.
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            Our websites are built with more of our code, and less 3rd party libraries, which means
            they are lightweight, easy to maintain, and made to order for your needs.
          </p>
          <p class="text-lg md:text-xl lsa lsa-slide-up">
            <strong><em>Everything you need, nothing you don't.</em></strong>
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            Once you're up and running, we help you set clear, meaningful goals for your online
            presence, ensuring every step aligns with your vision, engages your community, and
            drives real impact.
          </p>
          <p class="h5 py-4 lsa lsa-slide-up">
            High-performance, user-first web experiences that build trust and empower your audience.
          </p>
          <p class="text-lg md:text-xl text-lightGrey lsa lsa-slide-up">
            <Link
              text="Get In Touch"
              url="/contact"
              linkClass="font-header mb-2 md:mb-4 text-3xl md:text-4xl lg:text-5xl"
              iconClass="w-8 md:w-10 lg:w-12"
            />
          </p>
        </div>
      </div>
    </section>

    <section
      id="website-details"
      class="lsa lsa-slide-up p-6 md:p-8 bg-purple/5 rounded-2xl shadow-md"
    >
      <div class="grid gap-8 md:gap-16 md:grid-cols-2">
        <h2><span class="text-green">Every Website</span> Includes:</h2>

        <div>
          {
            websiteDetails.map((detail) => (
              <details class="mb-4 group">
                <summary class="text-xl flex justify-between gap-4 group-open:text-purple group-hover:text-purple transition duration-(--transition) cursor-pointer">
                  {detail.summary}
                </summary>
                <p class="py-4 text-lightGrey text-base">{detail.description}</p>
              </details>
            ))
          }
        </div>
      </div>
    </section>

    <section id="testimonials" class="max-w-screen-md m-auto text-center lsa lsa-slide-up">
      <h2 class="mb-8">What Our Clients Say</h2>
      <Testimonials data={testimonialData} />
    </section>

    <section id="get-started">
      <IntroCallCTA
        title="Let's Build Together"
        description="Ready to create a website that connects you with your community and reflects the care you put into your work?"
        linkText="Get Started"
        linkSrc="/contact"
      />
    </section>
  </main>
</Layout>

<style is:global>
  summary::after {
    content: '＋';
  }

  details[open] summary::after {
    content: '－';
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>

<script>
  const details = document.querySelectorAll('details')
  const firstDetail = details[0]

  // Open the first detail by default
  firstDetail.setAttribute('open', '')

  // Close all details that are not targetDetail
  details.forEach((targetDetail) => {
    targetDetail.addEventListener('click', () => {
      details.forEach((detail) => {
        if (detail !== targetDetail) {
          detail.removeAttribute('open')
        }
      })
    })
  })
</script>
