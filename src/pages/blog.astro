---
import { getCollection } from 'astro:content'
import PostsContainer from '../components/blog/PostsContainer.astro'
import Tags from '../components/blog/Tags.astro'
import Subscribe from '../components/widgets/Subscribe.astro'
import Layout from '../layouts/Layout.astro'

const allPosts = await getCollection('blog')
const sortedPosts = allPosts.sort((a, b) => +b.data.id - +a.data.id)

// Retrieve all unique tags
// Remove extra spaces
const tags = allPosts.reduce((acc: string[], post) => {
  post.data.tags.forEach((tag) => {
    if (!acc.includes(tag)) {
      tag.replace(/\s/g, ' ')
      acc.push(tag)
    }
  })
  return acc
}, [])
---

<Layout
  title="Wave Land Web | Blog"
  description="Musings on web development and the broader creative landscape"
>
  <header
    class="max-w-screen-3xl grid lg:grid-cols-2 gap-16 lg:gap-40 items-center pt-[calc(4rem+var(--nav-height))] pb-16 md:pb-24 border-b-[1px] border-grey"
  >
    <div class="max-w-lg lg:max-w-none flex flex-col gap-2 lg:gap-4 lsa lsa-slide-left no-repeat">
      <h1 class="text-darkPurple dark:text-purple text-base lg:text-lg leading-none">Blog</h1>
      <p class="font-body text-5xl leading-tight lg:text-6xl lg:leading-tight">
        Musings on technology and building for the web
      </p>
      <Subscribe formId="blog-subscribe" />
    </div>
    <p class="max-w-lg site-text lsa lsa-slide-right delay-200 no-repeat">
      Subscribe to know what we've been up to, along with tips and tricks to help you in your
      creative journey.
    </p>
  </header>

  <main class="max-w-screen-3xl">
    <section id="blog-container" class="grid lg:grid-cols-2 gap-12 lg:gap-40 mb-8">
      <PostsContainer posts={sortedPosts} title="Recent Posts" />
      <Tags tags={tags} />
    </section>
  </main>
</Layout>
