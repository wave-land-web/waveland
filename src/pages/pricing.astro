---
import PageHeader from '../components/ui/PageHeader.astro'
import Layout from '../layouts/Layout.astro'
import PricingCard from '../components/ui/PricingCard.astro'
import CTA from '../components/text/CTA.astro'

const websiteDetails = [
  {
    summary: 'Ongoing Partnership',
    description:
      "Our relationship doesn't end once your site is live. We offer continuous digital strategy, mentorship, and partnership to help your business grow and adapt. All packages include 24/7 customer support via email and optional video calls.",
  },
  {
    summary: 'High Performance',
    description:
      'Expect fast load times and seamless performance across all devices, ensuring your visitors have a smooth and satisfying experience.',
  },
  {
    summary: 'Custom Design & Branding',
    description:
      'We create one-of-a-kind designs that capture the essence of your brand, making sure your website stands out in a crowded digital landscape.',
  },
  {
    summary: 'SEO Optimizations',
    description:
      'Benefit from on-site and technical SEO optimizations that make your website easier to find and rank higher in search engines.',
  },
  {
    summary: 'Sustainable & Accessible',
    description:
      'We design with sustainability in mind, focusing on accessibility and user experience to ensure your site is inclusive and user-friendly.',
  },
  {
    summary: 'User-Centric Approach',
    description:
      'We prioritize empathy for your users, leading to increased trust, stronger connections, and higher conversion rates.',
  },
]
---

<Layout
  title="Wave Land Web | Pricing"
  description="Wave Land Web offers custom web design and development services for creative entrepreneurs and small businesses. Choose the plan that suits you best."
>
  <PageHeader
    title="Pricing"
    subtitle="Choose Your Plan"
    bodyText="Your vision, our expertise. Pick the plan that suits you best."
  />

  <main>
    <section id="pricing-options" class="pt-4">
      <!-- Payment toggle -->
      <div class="flex flex-col items-center gap-4 mb-8">
        <label for="toggle" class="flex items-center gap-4 cursor-pointer">
          <span id="monthly" class="text-white transition duration-300">Monthly</span>
          <div class="relative">
            <input id="toggle" type="checkbox" class="sr-only" />
            <div class="block bg-purple w-14 h-8 rounded-full"></div>
            <div
              id="dot"
              class="absolute top-1 left-1 w-6 h-6 bg-white rounded-full transition duration-300"
            >
            </div>
          </div>
          <span id="yearly" class="text-grey transition duration-300">Yearly</span>
        </label>
        <p class="text-sm text-grey text-center max-w-md">
          <em
            >* After 12 months of on-time payments, your website is paid in full, and the hosting
            price is reduced to $25/month. Ask us about our flexible add-ons!</em
          >
        </p>
      </div>

      <div class="w-full grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- 1 -->
        <PricingCard
          title="Foundation"
          monthlyPrice="$100"
          yearlyPrice="$85"
          features={[
            {
              title: 'Build a Solid Foundation',
              description:
                'Create a custom, high-performing landing page in less time. For those who want to focus on the essentials now and get fancy later.',
            },
            {
              title: 'Generate Business',
              description:
                'Tell your story, build an email list, and covert users into paying customers with a unique single-page website.',
            },
            {
              title: 'Flexible Add-Ons',
              description:
                'Optional add-ons for specialized services such as monthly maintenenace and strategy sessions.',
            },
            {
              title: 'Need Extras?',
              description: 'Additional development is billed at our standard hourly rate.',
            },
          ]}
          buttonText="Get Started"
        />

        <!-- 2 -->
        <PricingCard
          title="Pro"
          monthlyPrice="$300"
          yearlyPrice="$255"
          features={[
            {
              title: 'Grow Your Business',
              description: 'Custom design & development for up to 5 pages.',
            },
            {
              title: 'Express Yourself',
              description:
                'More real estate for blogging, images and stories about your team, or detailed product and service descriptions.',
            },
            {
              title: 'Flexible Add-Ons',
              description:
                'Optional add-ons for specialized services such as monthly maintenenace and strategy sessions.',
            },
            {
              title: 'Need Extras?',
              description: 'Additional development is billed at our standard hourly rate.',
            },
          ]}
          buttonText="Get Started"
        />

        <!-- 3 -->
        <PricingCard
          title="Enterprise"
          price="Need More?"
          dynamicPrice={false}
          features={[
            {
              title: 'Scalable Solutions',
              description: 'Custom design & development for large-scale projects.',
            },
            {
              title: 'Solve Unique Business Needs',
              description:
                'Add more pages, a content management system (CMS), e-commerce, expressive animations, email marketing, analytics, social media management, and more.',
            },
            {
              title: 'Flexible Add-Ons',
              description:
                'Optional add-ons for specialized services such as monthly maintenenace and strategy sessions.',
            },
          ]}
          buttonText="Get Started"
        />
      </div>
    </section>

    <section id="faq" class="lsa lsa-slide-up no-repeat">
      <div class="grid gap-8 md:gap-16 md:grid-cols-2">
        <h2><span class="text-green">Every Website</span> Includes:</h2>

        <div>
          {
            websiteDetails.map((detail) => (
              <details class="mb-4 group">
                <summary class="text-xl flex justify-between gap-4 group-open:text-purple group-hover:text-purple transition duration-300 cursor-pointer">
                  {detail.summary}
                </summary>
                <p class="py-4 text-grey text-base">{detail.description}</p>
              </details>
            ))
          }
        </div>
      </div>
    </section>

    <section id="get-started" class="lsa lsa-slide-up no-repeat">
      <CTA
        title="Get Started"
        description="Ready for the next step? Schedule a complimentary strategy session or send us an email to discuss your project."
        linkText="Free Intro Call"
        linkSrc="https://calendly.com/wavelandweb/15-min-meeting"
      />
    </section>
  </main>
</Layout>

<style>
  summary::after {
    content: '＋';
  }

  details[open] summary::after {
    content: '－';
  }

  details > summary::-webkit-details-marker {
    display: none;
  }
</style>

<script>
  const toggle = document.getElementById('toggle') as HTMLInputElement
  const dot = document.getElementById('dot')
  const monthly = document.getElementById('monthly')
  const yearly = document.getElementById('yearly')
  const monthlyPricing = document.querySelectorAll('#monthly-pricing')
  const yearlyPricing = document.querySelectorAll('#yearly-pricing')
  const details = document.querySelectorAll('details')

  function handlePricingToggle() {
    if (toggle.checked) {
      // Move the dot to the right
      dot?.classList.add('translate-x-6')

      // Change monthly to grey
      monthly?.classList.remove('text-white')
      monthly?.classList.add('text-grey')

      // Change yearly to white
      yearly?.classList.remove('text-grey')
      yearly?.classList.add('text-white')

      // Show yearly pricing
      monthlyPricing.forEach((price) => price.classList.add('hidden'))
      yearlyPricing.forEach((price) => price.classList.remove('hidden'))
    } else {
      // Move the dot to the left
      dot?.classList.remove('translate-x-6')

      // Change monthly to white
      monthly?.classList.add('text-white')
      monthly?.classList.remove('text-grey')

      // Change yearly to grey
      yearly?.classList.add('text-grey')
      yearly?.classList.remove('text-white')

      // Show monthly pricing
      monthlyPricing.forEach((price) => price.classList.remove('hidden'))
      yearlyPricing.forEach((price) => price.classList.add('hidden'))
    }
  }

  toggle.addEventListener('change', handlePricingToggle)
  details.forEach((targetDetail) => {
    // Close all details that are not targetDetail
    targetDetail.addEventListener('click', () => {
      details.forEach((detail) => {
        if (detail !== targetDetail) {
          detail.removeAttribute('open')
        }
      })
    })
  })
</script>
